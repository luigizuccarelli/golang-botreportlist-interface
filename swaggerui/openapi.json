{
  "openapi": "3.0.0",
  "info": {
    "description": "OpenAPI standard for ServisBOT Interface",
    "title": "servisbot-middleware-interface",
    "version": "1.0.1",
    "contact": {
      "name": "API Support",
      "url": "http://www.threefoldsystems.com/support",
      "email": "lzuccarelli@tfd.ie"
    }
  },
  "paths": {
    "/api/v2/api-docs/": {
      "get": {
        "summary": "OpenAPI 3.0 online documentation",
        "responses": {
          "200": {
            "description": "Online API Documentation",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/v2/sys/info/isalive": {
      "get": {
        "summary": "Openshift readiness and liveliness probes",
        "responses": {
          "200": {
            "description": "Readiness and liveliness probe check",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/{affiliateid}/profile/{email}": {
      "get": {
        "summary": "Api call that gets the profile data for a customer by email",
        "operationId": "mwgetprofile",
        "parameters": [
          {
            "name": "affiliateid",
            "in": "path",
            "description": "affiliate id",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "email",
            "in": "path",
            "description": "email",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "auth",
            "in": "header",
            "description": "authorization header using 'Authorization: Bearer token'",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get profile data by email",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Response"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Response"
                  }
                }
              }
            }
          }
        }
      }
    },
  },
  "servers": [
    {
      "url": "https://servisbot-service-servisbot-interface.apps.aws2-dev.ocp.14west.io/",
      "variables": {
        "port": {
          "default": "443"
        },
        "basePath": {
          "default": "/"
        }
      },
      "description": "base path and url for microservices"
    }
  ],
