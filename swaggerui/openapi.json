{
  "openapi": "3.0.0",
  "info": {
    "description": "OpenAPI standard for ServisBOT Interface",
    "title": "servisbot-s3ucket-manager",
    "version": "1.0.1",
    "contact": {
      "name": "API Support",
      "url": "http://www.threefoldsystems.com/support",
      "email": "lzuccarelli@tfd.ie"
    }
  },
  "paths": {
    "/api/v2/api-docs/": {
      "get": {
        "summary": "OpenAPI 3.0 online documentation",
        "responses": {
          "200": {
            "description": "Online API Documentation",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/v2/sys/info/isalive": {
      "get": {
        "summary": "Openshift readiness and liveliness probes",
        "responses": {
          "200": {
            "description": "Readiness and liveliness probe check",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/validateservice/api/v1/list/reports/{lastobject}": {
      "post": {
        "summary": "Api call that lists 1000 objects from an aws s3 bucket",
        "operationId": "listreports",
        "parameters": [
          {
            "name": "lastobject",
            "in": "path",
            "description": "lastobject (1000th item) - default false",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "body",
            "name": "body",
            "description": "Required payload to get a list of objects from ServisBOT report bucket",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/ServisBOTRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get list of objects",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          },
          "500": {
            "description": "Error response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            }
          }
        }
      }
    },
    "/validateservice/api/v1/emails/{key}": {
      "post": {
        "summary": "Api call that gets the originating email",
        "operationId": "getoriginalemail",
        "parameters": [
          {
            "name": "key",
            "in": "path",
            "description": "name or key of the s3 object (found in the list output)",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "body",
            "name": "body",
            "description": "Required payload to get the originating email (sent to ServisBOT)",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/ServisBOTRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get the originating email",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EmailResponse"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EmailResponse"
                }
              }
            }
          },
          "500": {
            "description": "Error response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EmailResponse"
                }
              }
            }
          }
        }
      }
    },
    "/validateservice/api/v1/pull/reports/{key}": {
      "post": {
        "summary": "Api call that gets the ServisBOT report object from an aws s3 bucket",
        "operationId": "getreportobject",
        "parameters": [
          {
            "name": "key",
            "in": "path",
            "description": "name or key of the s3 object (found in the list output)",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "body",
            "name": "body",
            "description": "Required payload to get the ServisBOT report object",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/ServisBOTRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get the report object",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReportResponse"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReportResponse"
                }
              }
            }
          },
          "500": {
            "description": "Error response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReportResponse"
                }
              }
            }
          }
        }
      }
    },
    "/validateservice/api/v1/push/reports/{key}": {
      "post": {
        "summary": "Api call that updates the ServisBOT report object in an aws s3 bucket",
        "operationId": "postreportobject",
        "parameters": [
          {
            "name": "key",
            "in": "path",
            "description": "name or key of the s3 object (found in the list output)",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "body",
            "name": "body",
            "description": "Required payload to get the ServisBOT report object",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/S3ReportObject"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get the report object",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleResponse"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleResponse"
                }
              }
            }
          },
          "500": {
            "description": "Error response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleResponse"
                }
              }
            }
          }
        }
      }
    }

  },
  "servers": [
    {
      "url": "https://nginx-service-servisbot-interface.apps.aws2-dev.ocp.14west.io/",
      "variables": {
        "port": {
          "default": "443"
        },
        "basePath": {
          "default": "/"
        }
      },
      "description": "base path and url for microservices"
    }
  ],
  "components": {
    "schemas": {
      "ServisBOTRequest": {
        "type": "object",
        "properties": {
          "jwt": {
            "type": "string"
          }
        }
      },
      "S3Object": {
        "type": "array",
        "items": {
          "properties" :{
            "name": {
              "type":"string"
            },
            "lastmodified": {
              "type": "string"
            },
            "size": {
              "type": "number"
            },
            "class": {
              "type": "string"
            }
          }
        }
      },
      "S3ReportObject": {
        "type": "array",
        "items": {
          "properties" : {
            "jwt": {
              "type": "string"
            },
            "channel": {
              "type":"string"
            },
            "affiliate": {
              "type": "string"
            },
            "messageId": {
              "type": "number"
            },
            "emailBody": {
              "type": "string"
            },
            "emailSubject": {
              "type": "string"
            },
            "emailS3Key": {
              "type": "string"
            },
            "timestamp": {
              "type": "number"
            },
            "endpoint": {
              "type": "string"
            },
            "botProcessingMode": {
              "type": "string"
            },
            "processOutcome": {
              "type": "string"
            },
            "entities": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "emailClassification": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      },
      "SimpleResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number",
            "format": "int64"
          },
          "statuscode": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },

      "Response": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number",
            "format": "int64"
          },
          "statuscode": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "payload": {
            "$ref": "#/components/schemas/S3Object"
          }
        }
      },
      "EmailResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number",
            "format": "int64"
          },
          "statuscode": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        }
      },
      "ReportResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number",
            "format": "int64"
          },
          "statuscode": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "report": {
            "$ref": "#/components/schemas/S3ReportObject"
          }
        }
      }
    },
    "responses": {
      "NotFound": {
        "description": "Entity not found."
      },
      "IllegalInput": {
        "description": "Illegal input for operation."
      },
      "Forbidden": {
        "description": "Not allowed to access this endpoint"
      },
      "GeneralError": {
        "description": "General Error",
        "content": {
          "application/json": {
            "schema": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
